<Window x:Class="Samtel.WPF.CompanyUsers.DepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asignación de Áreas" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="10">
            <StackPanel>
                <TextBlock Text="Seleccione un usuario:" Margin="0,0,0,5" FontWeight="Bold" />
                <ComboBox x:Name="cbUsers" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Seleccione un área:" Margin="0,0,0,5" FontWeight="Bold"/>
                <ComboBox x:Name="cbDepartments" Height="30" Margin="0,0,0,10"/>

                <Button Content="Asignar Área" Click="btnAssignDepartment_Click"
                        Height="35" Width="150" HorizontalAlignment="Center"
                        Background="#007ACC" Foreground="White" FontWeight="Bold"
                        BorderBrush="Transparent" Cursor="Hand" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
